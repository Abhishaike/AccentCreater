<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_result_result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Accent Detected:"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_result_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/tv_result_result_title"
        android:layout_toRightOf="@id/tv_result_result_title"
        android:textSize="24sp"
        tools:text="American" />

    <TextView
        android:id="@+id/tv_result_language_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_result_result_title"
        android:text="Compared to:"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_result_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_result_result"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/tv_result_language_title"
        android:layout_toRightOf="@id/tv_result_language_title"
        android:textSize="24sp"
        tools:text="American" />

    <TextView
        android:id="@+id/tv_result_error_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tv_result_language_title"
        android:text="Error:"
        android:textSize="24sp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_result_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_result_language"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/tv_result_error_title"
        android:layout_toRightOf="@id/tv_result_error_title"
        android:textSize="24sp"
        tools:text="None"
        android:visibility="invisible"/>

</RelativeLayout>
